<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">

    <!-- Class Header Template -->
    <Frame name="RLC_ClassHeaderTemplate" virtual="true">
        <Size x="200" y="20"/>
        <Layers>
            <Layer level="OVERLAY">
                <FontString name="$parentText" inherits="GameFontNormalLarge" justifyH="LEFT" setAllPoints="true"/>
            </Layer>
        </Layers>
    </Frame>

    <!-- Player Row Template -->
    <Frame name="RLC_PlayerRowTemplate" virtual="true">
        <Size x="320" y="30"/>
        <Layers>
            <Layer level="OVERLAY">
                <FontString name="$parentName" inherits="GameFontNormal" justifyH="LEFT">
                    <Size x="120" y="20"/>
                    <Anchors>
                        <Anchor point="LEFT" x="5" y="0"/>
                    </Anchors>
                </FontString>
                <FontString name="$parentMSCount" inherits="GameFontNormal" justifyH="LEFT" text="MS: 0">
                    <Size x="50" y="20"/>
                    <Anchors>
                        <Anchor point="LEFT" x="130" y="0"/>
                    </Anchors>
                </FontString>
                <FontString name="$parentOSCount" inherits="GameFontNormal" justifyH="LEFT" text="OS: 0">
                    <Size x="50" y="20"/>
                    <Anchors>
                        <Anchor point="LEFT" x="185" y="0"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Frames>
            <Button name="$parentMinusBtn" inherits="GameMenuButtonTemplate" text="-">
                <Size x="20" y="25"/>
                <Anchors>
                    <Anchor point="LEFT" x="240" y="0"/>
                </Anchors>
                <Scripts>
                    <OnClick>
                        if RLC and RLC.OnMinusClick then
                            RLC:OnMinusClick(self:GetParent())
                        end
                    </OnClick>
                </Scripts>
            </Button>
            <Button name="$parentPlusBtn" inherits="GameMenuButtonTemplate" text="+">
                <Size x="20" y="25"/>
                <Anchors>
                    <Anchor point="LEFT" relativeTo="$parentMinusBtn" relativePoint="RIGHT" x="2" y="0"/>
                </Anchors>
                <Scripts>
                    <OnClick>
                        if RLC and RLC.OnPlusClick then
                            RLC:OnPlusClick(self:GetParent())
                        end
                    </OnClick>
                </Scripts>
            </Button>
        </Frames>
    </Frame>

    <!-- Main Frame -->
    <Frame name="RaidLootCounterFrame" toplevel="true" movable="true" enableMouse="true" hidden="true" parent="UIParent">
        <Size x="800" y="600"/>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>
        <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
            <BackgroundInsets>
                <AbsInset left="11" right="12" top="12" bottom="11"/>
            </BackgroundInsets>
            <TileSize>
                <AbsValue val="32"/>
            </TileSize>
            <EdgeSize>
                <AbsValue val="32"/>
            </EdgeSize>
        </Backdrop>
        <Layers>
            <Layer level="OVERLAY">
                <FontString name="$parentTitle" inherits="GameFontNormalLarge" text="Raid Loot Counter">
                    <Anchors>
                        <Anchor point="TOP" x="0" y="-20"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Frames>
            <Frame name="$parentMask" hidden="true" enableMouse="true" setAllPoints="true" frameStrata="HIGH">
                <Layers>
                    <Layer level="BACKGROUND">
                        <Texture setAllPoints="true">
                            <Color r="0" g="0" b="0" a="0.5"/>
                        </Texture>
                    </Layer>
                </Layers>
            </Frame>
            <Button name="$parentCloseButton" inherits="UIPanelCloseButton">
                <Anchors>
                    <Anchor point="TOPRIGHT" x="-5" y="-5"/>
                </Anchors>
            </Button>
            
            <Button name="$parentSyncButton" inherits="GameMenuButtonTemplate" text="Sync Raid">
                <Size x="100" y="25"/>
                <Anchors>
                    <Anchor point="TOPLEFT" x="20" y="-50"/>
                </Anchors>
                <Scripts>
                    <OnClick>
                        if RLC and RLC.OnSyncClick then
                            RLC:OnSyncClick()
                        end
                    </OnClick>
                </Scripts>
            </Button>
            
            <Button name="$parentClearButton" inherits="GameMenuButtonTemplate" text="Clear Data">
                <Size x="100" y="25"/>
                <Anchors>
                    <Anchor point="LEFT" relativeTo="$parentSyncButton" relativePoint="RIGHT" x="10" y="0"/>
                </Anchors>
                <Scripts>
                    <OnClick>
                        StaticPopup_Show("RLC_CLEAR_CONFIRM")
                    </OnClick>
                </Scripts>
            </Button>

            <Button name="$parentSendButton" inherits="GameMenuButtonTemplate" text="Send Stats">
                <Size x="120" y="25"/>
                <Anchors>
                    <Anchor point="TOPRIGHT" x="-40" y="-50"/>
                </Anchors>
                <Scripts>
                    <OnClick>
                        if RLC and RLC.SendToRaid then
                            RLC:SendToRaid()
                        end
                    </OnClick>
                </Scripts>
            </Button>

            <Button name="$parentViewLootButton" inherits="GameMenuButtonTemplate" text="View Loot">
                <Size x="100" y="25"/>
                <Anchors>
                    <Anchor point="RIGHT" relativeTo="$parentSendButton" relativePoint="LEFT" x="-10" y="0"/>
                </Anchors>
                <Scripts>
                    <OnClick>
                        if RLC and RLC.OnViewLootClick then
                            RLC:OnViewLootClick()
                        end
                    </OnClick>
                </Scripts>
            </Button>

            <Button name="$parentStartRollCaptureButton" inherits="GameMenuButtonTemplate" text="开启roll捕获">
                <Size x="150" y="25"/>
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="$parentSyncButton" relativePoint="BOTTOMLEFT" x="0" y="-5"/>
                </Anchors>
                <Scripts>
                    <OnClick>
                        if RLC and RLC.OnStartRollCaptureClick then
                            RLC:OnStartRollCaptureClick()
                        end
                    </OnClick>
                </Scripts>
            </Button>

            <Button name="$parentStopRollCaptureButton" inherits="GameMenuButtonTemplate" text="停止roll捕获">
                <Size x="150" y="25"/>
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="$parentStartRollCaptureButton" relativePoint="TOPRIGHT" x="10" y="0"/>
                </Anchors>
                <Scripts>
                    <OnClick>
                        if RLC and RLC.OnStopRollCaptureClick then
                            RLC:OnStopRollCaptureClick()
                        end
                    </OnClick>
                </Scripts>
            </Button>

            <CheckButton name="$parentAutoAnnounceCheckbox" inherits="OptionsCheckButtonTemplate">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="$parentStopRollCaptureButton" relativePoint="TOPRIGHT" x="10" y="0"/>
                </Anchors>
                <Scripts>
                    <OnClick>
                        if RLC and RLC.OnAutoAnnounceClick then
                            RLC:OnAutoAnnounceClick(self)
                        end
                    </OnClick>
                </Scripts>
            </CheckButton>

            <ScrollFrame name="RLCScrollFrame" inherits="UIPanelScrollFrameTemplate">
                <Anchors>
                    <Anchor point="TOPLEFT" x="20" y="-120"/>
                    <Anchor point="BOTTOMRIGHT" x="-40" y="20"/>
                </Anchors>
                <ScrollChild>
                    <Frame name="RLCScrollChild">
                        <Size x="740" y="1"/>
                    </Frame>
                </ScrollChild>
            </ScrollFrame>
        </Frames>
        <Scripts>
            <OnLoad>
                self:RegisterForDrag("LeftButton");
            </OnLoad>
            <OnDragStart>
                self:StartMoving();
            </OnDragStart>
            <OnDragStop>
                self:StopMovingOrSizing();
            </OnDragStop>
        </Scripts>
    </Frame>

    <!-- Loot Selection Row Template -->
    <Button name="RLC_LootSelectionRowTemplate" virtual="true">
        <Size x="760" y="25"/>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture name="$parentHighlight" file="Interface\QuestFrame\UI-QuestTitleHighlight" alphaMode="ADD" hidden="true">
                    <AllPoints/>
                </Texture>
            </Layer>
            <Layer level="OVERLAY">
                <FontString name="$parentItem" inherits="GameFontNormal" justifyH="LEFT">
                    <Anchors>
                        <Anchor point="LEFT" x="5" y="0"/>
                        <Anchor point="RIGHT" relativeTo="$parentBoss" relativePoint="LEFT" x="-10" y="0"/>
                    </Anchors>
                </FontString>
                <FontString name="$parentBoss" inherits="GameFontHighlightSmall" justifyH="LEFT">
                    <Size x="350" y="25"/>
                    <Anchors>
                        <Anchor point="RIGHT" x="0" y="0"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Scripts>
            <OnClick>
                if RLC and RLC.OnLootSelectionRowClick then
                    RLC:OnLootSelectionRowClick(self)
                end
            </OnClick>
            <OnEnter>
                if RLC and RLC.OnLootSelectionRowEnter then
                    RLC:OnLootSelectionRowEnter(self)
                end
            </OnEnter>
            <OnLeave>
                GameTooltip:Hide()
            </OnLeave>
        </Scripts>
    </Button>

    <!-- Loot History Row Template -->
    <Button name="RLC_LootHistoryRowTemplate" virtual="true">
        <Size x="560" y="16"/>
        <Layers>
            <Layer level="OVERLAY">
                <FontString name="$parentText" inherits="GameFontHighlightSmall" justifyH="LEFT">
                    <Anchors>
                        <Anchor point="TOPLEFT" x="5" y="0"/>
                        <Anchor point="BOTTOMRIGHT" x="-5" y="0"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Scripts>
            <OnClick>
                if RLC and RLC.OnHistoryRowClick then
                    RLC:OnHistoryRowClick(self)
                end
            </OnClick>
            <OnEnter>
                if RLC and RLC.OnHistoryRowEnter then
                    RLC:OnHistoryRowEnter(self)
                end
            </OnEnter>
            <OnLeave>
                GameTooltip:Hide()
            </OnLeave>
        </Scripts>
    </Button>

    <!-- Loot Selection Frame -->
    <Frame name="RLCLootSelectionFrame" toplevel="true" movable="true" enableMouse="true" hidden="true" parent="UIParent" frameStrata="DIALOG">
        <Size x="800" y="400"/>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>
        <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
            <BackgroundInsets>
                <AbsInset left="11" right="12" top="12" bottom="11"/>
            </BackgroundInsets>
            <TileSize>
                <AbsValue val="32"/>
            </TileSize>
            <EdgeSize>
                <AbsValue val="32"/>
            </EdgeSize>
        </Backdrop>
        <Layers>
            <Layer level="OVERLAY">
                <FontString name="$parentTitle" inherits="GameFontNormalLarge" text="Assign Loot">
                    <Anchors>
                        <Anchor point="TOP" x="0" y="-20"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Frames>
            <Button name="$parentCloseButton" inherits="UIPanelCloseButton">
                <Anchors>
                    <Anchor point="TOPRIGHT" x="-5" y="-5"/>
                </Anchors>
            </Button>
            
            <Button name="$parentSaveButton" inherits="GameMenuButtonTemplate" text="Save">
                <Size x="100" y="25"/>
                <Anchors>
                    <Anchor point="BOTTOM" x="0" y="20"/>
                </Anchors>
                <Scripts>
                    <OnClick>
                        if RLC and RLC.OnLootSelectionSaveClick then
                            RLC:OnLootSelectionSaveClick()
                        end
                    </OnClick>
                </Scripts>
            </Button>

            <Button name="$parentSaveOSButton" inherits="GameMenuButtonTemplate" text="OS Roll" hidden="true">
                <Size x="100" y="25"/>
                <Anchors>
                    <Anchor point="LEFT" relativeTo="$parentSaveButton" relativePoint="RIGHT" x="20" y="0"/>
                </Anchors>
                <Scripts>
                    <OnClick>
                        if RLC and RLC.OnLootSelectionSaveOSClick then
                            RLC:OnLootSelectionSaveOSClick()
                        end
                    </OnClick>
                </Scripts>
            </Button>

            <ScrollFrame name="RLCLootSelectionScrollFrame" inherits="FauxScrollFrameTemplate">
                <Anchors>
                    <Anchor point="TOPLEFT" x="20" y="-50"/>
                    <Anchor point="BOTTOMRIGHT" x="-40" y="50"/>
                </Anchors>
                <Scripts>
                    <OnVerticalScroll>
                        FauxScrollFrame_OnVerticalScroll(self, offset, 25, function() if RLC then RLC:UpdateLootSelectionScroll() end end)
                    </OnVerticalScroll>
                </Scripts>
            </ScrollFrame>
        </Frames>
        <Scripts>
            <OnLoad>
                self:RegisterForDrag("LeftButton");
            </OnLoad>
            <OnDragStart>
                self:StartMoving();
            </OnDragStart>
            <OnDragStop>
                self:StopMovingOrSizing();
            </OnDragStop>
            <OnShow>
                if RaidLootCounterFrameMask then
                    RaidLootCounterFrameMask:Show()
                end
            </OnShow>
            <OnHide>
                if RaidLootCounterFrameMask then
                    RaidLootCounterFrameMask:Hide()
                end
            </OnHide>
        </Scripts>
    </Frame>

    <!-- Loot History Frame -->
    <Frame name="RaidLootCounterLootHistoryFrame" toplevel="true" movable="true" enableMouse="true" hidden="true" parent="UIParent" frameStrata="DIALOG">
        <Size x="600" y="640"/>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>
        <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
            <BackgroundInsets>
                <AbsInset left="11" right="12" top="12" bottom="11"/>
            </BackgroundInsets>
            <TileSize>
                <AbsValue val="32"/>
            </TileSize>
            <EdgeSize>
                <AbsValue val="32"/>
            </EdgeSize>
        </Backdrop>
        <Layers>
            <Layer level="OVERLAY">
                <FontString name="$parentTitle" inherits="GameFontNormalLarge" text="Loot History">
                    <Anchors>
                        <Anchor point="TOP" x="0" y="-20"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Frames>
            <Button name="$parentCloseButton" inherits="UIPanelCloseButton">
                <Anchors>
                    <Anchor point="TOPRIGHT" x="-5" y="-5"/>
                </Anchors>
            </Button>
            
            <ScrollFrame name="RLCLootHistoryScrollFrame" inherits="FauxScrollFrameTemplate">
                <Anchors>
                    <Anchor point="TOPLEFT" x="20" y="-50"/>
                    <Anchor point="BOTTOMRIGHT" x="-40" y="20"/>
                </Anchors>
                <Scripts>
                    <OnVerticalScroll>
                        FauxScrollFrame_OnVerticalScroll(self, offset, 16, function() if RLC then RLC:UpdateLootHistoryScroll() end end)
                    </OnVerticalScroll>
                </Scripts>
            </ScrollFrame>
        </Frames>
        <Scripts>
            <OnLoad>
                self:RegisterForDrag("LeftButton");
            </OnLoad>
            <OnDragStart>
                self:StartMoving();
            </OnDragStart>
            <OnDragStop>
                self:StopMovingOrSizing();
            </OnDragStop>
            <OnShow>
                if RaidLootCounterFrameMask then
                    RaidLootCounterFrameMask:Show()
                end
            </OnShow>
            <OnHide>
                if RaidLootCounterFrameMask then
                    RaidLootCounterFrameMask:Hide()
                end
            </OnHide>
        </Scripts>
    </Frame>
</Ui>